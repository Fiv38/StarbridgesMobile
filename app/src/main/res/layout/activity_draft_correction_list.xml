<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DraftCorrectionListActivity">


    <ListView
        android:id="@+id/lstDraftCorrection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:background="@drawable/border"
        android:layout_marginTop="59dp" />

    <TextView
        android:id="@+id/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/txtNameDraftCorrection"
        android:layout_marginStart="51dp"
        android:layout_weight="1"
        android:text="Name" />

    <TextView
        android:id="@+id/txtNameDraftCorrection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="143dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:gravity="left"
        android:text="@string/txt_name_correction" />

    <TextView
        android:id="@+id/NIK"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/TextView"
        android:layout_below="@+id/TextView"
        android:layout_weight="1"
        android:text="NIK" />

    <TextView
        android:id="@+id/txtNIKDraftCorrection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtNameDraftCorrection"
        android:layout_below="@+id/TextView"
        android:layout_weight="1"
        android:gravity="left"
        android:text="@string/txt_nik_correction" />

</android.widget.RelativeLayout>