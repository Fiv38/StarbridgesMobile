<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:padding="12dp">


    <!-- Leave -->

    <TextView
        android:id="@+id/requestTypeView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Cuti Biasa"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/leaveView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/requestTypeView2"
        android:layout_below="@id/requestTypeView2"
        android:layout_marginTop="5dp"
        android:text="20 Jul 2018 - 21 Jul 2018"
        android:textColor="@color/md_light_blue_A100"
        android:textSize="16dp"
        android:textStyle="bold" />


    <!-- Unit Reduce -->

    <!-- Notes -->

    <TextView
        android:id="@+id/notesView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/leaveView2"
        android:layout_marginTop="5dp"
        android:text="Pulang Kampung"
        android:textSize="16dp"
        android:textStyle="bold" />
</RelativeLayout>