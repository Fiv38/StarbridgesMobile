<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.co.indocyber.android.starbridges.activity.StartEndDayActivity"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="20sp" />

    <TextClock
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:format12Hour="kk:mm:ss"
        android:format24Hour="kk:mm:ss"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:textSize="35sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_clock_txt"
        android:paddingHorizontal="20dp"/>

    <Button
        android:id="@+id/btn_show_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_btn"
        android:text="Start Day"
        android:textColor="@android:color/background_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TODAY" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/StartDayList"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>


