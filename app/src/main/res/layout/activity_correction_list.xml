<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CorrectionListActivity">

    <TextView
        android:id="@+id/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="11dp"
        android:layout_weight="1"
        android:text="Name" />

    <TextView
        android:id="@+id/txtNameCorrection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/TextView"
        android:layout_marginStart="161dp"
        android:layout_weight="1"
        android:gravity="left"
        android:text="@string/txt_name_correction" />

    <TextView
        android:id="@+id/NIK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/TextView"
        android:layout_below="@+id/TextView"
        android:layout_weight="1"
        android:text="NIK" />

    <TextView
        android:id="@+id/txtNIKCorrection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtNameCorrection"
        android:layout_below="@+id/TextView"
        android:layout_weight="1"
        android:gravity="left"
        android:text="@string/txt_nik_correction" />

    <ListView
        android:id="@+id/lstCorrection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="57dp"
        android:background="@drawable/border"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />
</RelativeLayout>