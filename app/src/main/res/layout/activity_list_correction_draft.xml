<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DraftCorrectionActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcyListDraftCorrection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="51dp" />

    <ImageView
        android:id="@+id/imgDeleteCDrafts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_dialog_close_light" />

    <TextView
        android:id="@+id/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="11dp"
        android:layout_weight="1"
        android:text="Name" />

    <TextView
        android:id="@+id/txtNameDraftCorrection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/TextView"
        android:layout_marginStart="138dp"
        android:layout_weight="1"
        android:gravity="left"
        android:text="@string/txt_name_correction" />

    <TextView
        android:id="@+id/NIK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/TextView"
        android:layout_below="@+id/TextView"
        android:layout_weight="1"
        android:text="NIK" />

    <TextView
        android:id="@+id/txtNIKDraftCorrection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtNameDraftCorrection"
        android:layout_below="@+id/TextView"
        android:layout_weight="1"
        android:gravity="left"
        android:text="@string/txt_nik_correction" />

</android.widget.RelativeLayout>