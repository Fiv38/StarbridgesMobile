<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <!--Decision Number-->

    <TextView
        android:id="@+id/decisionNumberView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblDecNumber"
        android:layout_alignParentRight="true"
        android:text="Ovt0001"
        android:paddingBottom="3dp"
        android:textColor="@color/md_light_blue_900"
        android:textSize="16dp"
        android:textStyle="bold" />

    <!-- Date -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/DateView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/DateLbl"
                android:layout_alignParentRight="true"
                android:text="20 Jul 2018"
                android:paddingBottom="3dp"
                android:textColor="@color/md_light_blue_A100"
                android:textSize="16dp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/StartLbl"
                android:paddingBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DateLbl"
                android:text="Start"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/StartView"
                android:paddingBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/StartLbl"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="40dp"
                android:text="21:00"
                android:textSize="16dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/EndLbl"
                android:paddingBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/StartLbl"
                android:text="End"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/EndView"
                android:paddingBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/EndLbl"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="40dp"
                android:text="22:00"
                android:textSize="16dp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/approvedDateLbl"
                android:layout_width="wrap_content"
                android:paddingBottom="3dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notesLbl"
                android:text="Approved Date"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/approvedDateView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:layout_alignBaseline="@+id/approvedDateLbl"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="40dp"
                android:text="20 Jul 2018"
                android:textSize="16dp"
                android:textStyle="bold" />

        </TableRow>
    </TableLayout>


    <!-- Start -->

    <!-- End -->


    <!-- Approved Date -->

</LinearLayout>