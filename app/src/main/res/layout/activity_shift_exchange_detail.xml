<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.starbridges.activity.ShiftExchangeDetailActivity"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/lblEmployee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Employee" />

    <Spinner
        android:id="@+id/spEmployeeShiftEx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtDateShiftEx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:longClickable="false"
            android:focusable="false" />

        <ImageView
            android:id="@+id/imgDateShiftEx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/ic_action_calendar" />

    </LinearLayout>

    <TextView
        android:id="@+id/lblShift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shift" />

    <Spinner
        android:id="@+id/spShift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/lblNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notes" />

    <EditText
        android:id="@+id/txtNotesShiftEx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />

    <Button
        android:id="@+id/btnUploadShiftEx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_btn"
        android:text="Upload Attachment"
        android:textColor="@android:color/white"
        />

    <ImageView
        android:id="@+id/imageUploadShiftEx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:adjustViewBounds="true"
        android:maxHeight="125dp"
        android:background="@color/cardview_shadow_start_color"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSubmitShiftEx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:background="@drawable/rounded_btn"
            android:text="Submit"
            android:textColor="@android:color/white"
            />

        <Button
            android:id="@+id/btnSaveShiftEx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:background="@drawable/rounded_btn"
            android:text="Save"
            android:textColor="@android:color/white"
            />

        <Button
            android:id="@+id/btnCancelShiftEx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:background="@drawable/rounded_btn"
            android:text="Cancel"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</LinearLayout>
